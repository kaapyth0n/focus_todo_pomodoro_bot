# Telegram Bot Token (get from @BotFather)
BOT_TOKEN=your_telegram_bot_token_here

# Domain configuration for mini-app access
# For local development with ngrok: https://xxxx-xx-xx-xxx-xx.ngrok-free.app
# For production: https://yourdomain.com
DOMAIN_URL=https://your-domain-url.com

# Flask configuration
FLASK_PORT=5002

GOOGLE_CLIENT_ID=your_client_id_here
GOOGLE_CLIENT_SECRET=your_client_secret_here
GOOGLE_REDIRECT_URI=urn:ietf:wg:oauth:2.0:oob

# Jira Cloud Integration
JIRA_CLIENT_ID=your_jira_client_id_here
JIRA_CLIENT_SECRET=your_jira_client_secret_here